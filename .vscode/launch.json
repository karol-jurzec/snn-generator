{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug snn_generator",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/snn_generator",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin:${env:PATH}"
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
